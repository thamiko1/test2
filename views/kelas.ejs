<%- include('partials/head')%>
<body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <style>
        .home{
        background-image: url("../img/background_2.jpg");
        width: 100%;
        height: 800px;
        background-repeat: no-repeat; /* Do not repeat the image */
        background-attachment: fixed;
        background-size: cover; /* Resize the background image to cover the entire container */
    }
        .box{
        box-shadow: 0 8px 24px 0 rgba(252, 246, 224, 0.704);
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Do not repeat the image */
        background-size: cover; /* Resize the background image to cover the entire container */
    }
    </style>
    <div class="home">
        <%- include('partials/navbar')%>
        <div class="row" style = "display:flex; justify-content: center;">
            <% for (let klas of classes) { %>
            <div class="border border-2 rounded-5 mt-3 mb-3 box" style = "width: 19rem; background-color: white; margin-left: 40px; margin-right: 20px;" >
                <div class=  "mb-3 mt-2"  style = "width: 304px; height: 200px;">
                    <img class = "rounded-5"src = "/img/class.jpg" alt = "classes" style = "width:275px; height: 200px;">
                </div>
                <ul style = "margin-left: 20px">
                    <li>Lecture Days: <%= klas.Schedule %></li>
                    <li>Time: <%= klas.Time %></li>
                    <li>Number of Classes: <%= klas.Intensity %></li>
                    <li>Courses: <%= klas.Course %></li>
                    <li>Instructor: <%= klas.Teacher %> </li>
                    <li>Price: NTD <%= klas.Price %></li>
                </ul>
                <div class = "mb-3" style = "display: flex; justify-content: center;">
                    <a id = "beli" class = "btn btn-primary" href = "/classes/buyclass" style = "width: 150px;" type="submit" ><span class = "align-text-center">Read More</span></a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <%- include('partials/footer')%>
<script src = "js/buyclass.js"></script>
</body>