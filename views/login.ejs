<%- include('partials/head')%>
<body>
    <style>
        .center-both{
            display: flex;
            justify-content: center;
        }
        .other{
            background-image: url('../img/background_2.jpg');
            width: 100%;
            height: 800px;
            background-repeat: no-repeat; /* Do not repeat the image */
            background-size: cover; /* Resize the background image to cover the entire container */
        }
    </style>
    <div class = "other">
        <%- include('partials/navbar')%>
        <div class="row">
            <div class="col-sm-8" style="display: flex; justify-content: center;">
            </div>
            <div class="col-sm-4 my-auto mt-5">
                <div class = "container" style = "display: flex; justify-content: right; ">
                    <h6>
                        <a  class = " btn btn-outline-light "  href = "/login" type = "button" id = "button-student ">Student</a>
                        <a  class = " btn btn-outline-light"  href = "/login/teacher" type = "button" id = "button-student ">Teacher</a>
                    </h6>
                </div>
                
                <div class = "card" style="width: 70%; margin-left: 100px; box-shadow: 0 8px 24px 0 rgba(252, 246, 224, 0.704);">
                    <div class = "card-body"  >
                        <h5 class = "card-title">Login Form</h5>
                        <form onsubmit = "return false;" id = "form">
                            <div class="nb-3">
                            <label for="email" class = "form-label">Email address</label>
                            <input type="email" class="form-control" id="email">
                            </div>
                            <div class="nb-3">
                            <label for="password" class = "form-label">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                            </div>
                            <div class="alert alert-danger" role="alert" id="error"    style="display: none;"></div>
                            <div class="alert alert-success" role="alert" id="success" style="display: none;"></div>
                            <div class="container my-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                            <a class = "link" href="/register" style="float: right" >Does not have an account? </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src = "js/login.js"></script>
<%- include('partials/footer')%>
</body>
</html>