<%- include('partials/head')%>
<body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <style>
        .home{
        background-image: url("../img/background_2.jpg");
        width: 100%;
        height: 800px;
        background-repeat: no-repeat; /* Do not repeat the image */
        background-size: cover; /* Resize the background image to cover the entire container */
    }  
    </style>
<div class = "home">
    <%- include('partials/navbar')%>
    <section class="mb-4">
        
        <div class="row">
            
            <div class="col-md-3"></div>
            <div class="col-md-6 mb-md-0 mb-5">
                <div class="card mt-5 " style  = "opacity: 0.9; box-shadow: 0 8px 24px 0 rgba(252, 246, 224, 0.704);">
    
                <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
                <!--Section description-->
                <p class="text-center w-responsive mx-auto mb-5" >Do you have any questions? Our team will come back to you within
                    a matter of hours to help you.</p>
                <form onsubmit = "return false;" id = "form">
                    
                    <!--Grid row-->
                    <div class="row">
                        
                        <!--Grid column-->
                        <div class="col-md-6 mt-3 mb-3">
                            <div class="md-form mb-0" style = "margin-left: 40px" >
                                <label for="name" class="">Your name</label>
                                <input type="text" id="nama" name="nama" class="form-control" style="width: 90%;">
                            </div>
                        </div>
                        <!--Grid column-->
                        
                        <!--Grid column-->
                        <div class="col-md-6 mt-3 mb-3">
                            <div class="md-form mb-0" style = "margin-right: 20px; margin-left: 20px;">
                                <label for="email" class="">Your email</label>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" autocomplete="off" required>
                                <small id="emailHelp" class="form-text text-muted"></small>
                            </div>
                        </div>
                        <!--Grid column-->
                        
                    </div>
                    <!--Grid row-->
                    
                    <!--Grid row-->
                    <div class="row" class = "mt-3 mb-3">
                        <div class="col-md-12" style="margin-left: 40px; margin-right: 40px;">
                            <div class="md-form mb-0">
                                <label for="subject" class="">Subject</label>
                                <input type="text" id="subject" name="subject" class="form-control" style="width: 88%;">
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    
                    <!--Grid row-->
                    <div class="row mt-3 mb-3">
    
                        <!--Grid column-->
                        <div class="col-md-12" style = "margin-left: 40px; margin-right: 40px;">
                            
                            <div class="md-form">
                                <label for="message">Your message</label>
                                <textarea type="text" id="message" name="message" rows="5" class="form-control md-textarea" style="width: 88%;"></textarea>
                            </div>
                            
                        </div>
                    </div>
                    <!--Grid row-->
    
                
                <div class="alert alert-danger" role="alert" id="error"    style="display: none;"></div>
                <div class="alert alert-success" role="alert" id="success" style="display: none;"></div>
                <div class="text-center text-md-left mt-3 mb-5">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form> 
                </div>
            </div>
    
            <div class="col-md-3"></div>
        </div>
        
    </section>
</div>
<!--Section: Contact v.2-->    
<script src = "js/ContactUs.js"></script>
<%- include('partials/footer')%>    
</body>
</html>